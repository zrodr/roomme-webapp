{{#if logged}}
<main>
    <div class="add-roommate-wrap">
        <div class="add-roommate-content">
        {{!-- 
          ID in action route is the id from query string when fetching a certain listing
        --}}
        <form method="POST" action="/listing/roommate/{{listingID}}?_method=PUT">
            <h2> Edit Your Roommate Profile </h2>
            <table class="add-roommate-table">
                <tr>
                    <td> <b> Title </b> </td>
                    <td> <input class="add-roommate-text-box" name="title" type="text" placeholder="Your Full Name" required> </td>
                </tr>
                <tr>
                    <td> <b> Description </b> </td>
                    <td> <input class="add-roommate-text-box" name="description" type="text" placeholder="Describe yourself" required> </td>
                </tr>
                <tr>
                    <td> <b> Duration </b> </td>
                    <td>
                        <div class="room-count"> 
                            <select name="duration">
                                <option value="0">Time for Rent</option>
                                <option value="3">Less than 3 months</option>
                                <option value="6">Less than 6 months</option>
                                <option value="9">Less than 9 months</option>
                                <option value="12">Less than 1 year</option>
                                <option value="24">Less than 2 years</option>
                            </select>
                        </div>
                    </td>
                </tr>
            </table>
            <b> Interests </b>
            <div>
                <table class="interests-table">
                    <tr>
                        <td> <input name="exercise" type="checkbox"> Exercise </td>
                        <td> <input name="food" type="checkbox"> Food </td>
                        <td> <input name="gaming" type="checkbox"> Gaming </td>
                        <td> <input name="media" type="checkbox"> Media </td>
                    </tr>
                    <tr>
                        <td> <input name="partying" type="checkbox"> Partying </td>
                        <td> <input name="quiet" type="checkbox"> Quiet </td>
                        <td> <input name="reading" type="checkbox"> Reading </td>
                        <td> <input name="sports" type="checkbox"> Sports </td>
                    </tr>
                </table>
            </div>
            <br>
            <label for="add-roommate-file-button" class="add-roommate-file-button"> <b> Upload Your Image </b> </label>
            <br>
            <input type="file" name="photo" id="add-roommate-file-button" accept="image/*" requied>
            <br>
            <div class="add-roommate-button"> <button id="add-roommate-button" class="button" type="submit">Update</button> </div>
            <br>
        </form>
        </div>
    </div>
</main>
{{else}}
  <h2>Error not logged in</h2>
{{/if}}